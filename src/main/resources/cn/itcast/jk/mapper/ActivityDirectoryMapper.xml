<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--映射到ActivityDirectoryMapper接口,namespce是mapper接口的权限定名-->
<mapper namespace="cn.itcast.jk.mapper.ActivityDirectoryMapper">
    <!-- resultMap映射 -->
    <resultMap type="cn.itcast.jk.domain.ActivityDirectory" id="activityDirectoryRM">
        <!-- 主键 -->
        <id property="id" column="id"/>
        <!-- 一般属性 -->
        <result property="activityCategory" column="activity_category"/>
        <result property="parentId" column="parent_id"/>
        <result property="rank" column="rank"/>
    </resultMap>

    <select id="selectFromActivityDirectory"  parameterType="Integer" resultMap="activityDirectoryRM">
      select * from activity_directory where parent_id = #{0}
    </select>

</mapper>